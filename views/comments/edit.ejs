<%- include("../partials/header") %>


<div class="container">
	
	<h1 class="text-center my-4">Edit Comment</h1>
	<h3 class="text-center my-4 text-info"><%= campsite.name %></h3>
	
	<div class="row">
		<div style="width: 30%; margin: 0 auto">
			<div class="col-md-12">
				<form action="/campgrounds/<%= campsite._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<!-- Note how we construct the comment text and author inputs in the form - this groups them together as a ready-made 'comment' object in the http request body so they are easier to use in the app file (route)	 -->
						<input type="text" class="form-control" placeholder="What do you want to say?" name="comment[text]" value="<%=comment.text%>">	
					</div>
					<div class="form-group">
						<button class="btn btn-info btn-block">Submit!</button>	
					</div>			
				</form>
				<p> <a href="/campgrounds/<%= campsite._id %>">Go Back</a> </p>
			</div>
		</div>
	</div>
			
</div>



<%- include("../partials/footer") %>